<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Create Gate Pass</title>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">

  <style>
    body { background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%); min-height: 100vh; font-family: 'Segoe UI', sans-serif; }
    .page-header { background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white; padding: 2.5rem 0; margin-bottom: 2rem; border-radius: 0 0 20px 20px; box-shadow: 0 10px 30px rgba(0,0,0,0.2); }
    .form-card { border: none; border-radius: 16px; box-shadow: 0 8px 25px rgba(0,0,0,0.1); }
    .item-row { background: #f8f9fa; border-radius: 12px; padding: 15px; margin-bottom: 15px; }
    .btn-submit { padding: 12px 50px; font-size: 1.1rem; border-radius: 50px; }
  </style>
</head>
<body>

  <div class="page-header text-center">
    <div class="container">
      <h1 class="display-4 fw-bold">Create New Gate Pass</h1>
      <p class="lead">Fill details and generate gate pass</p>
    </div>
  </div>

  <div class="container mb-5">
    <div class="row justify-content-center">
      <div class="col-lg-10">
        <div class="card form-card">
          <div class="card-body p-5">

            <form action="/api/v1/gatepass/add" method="POST">

              <!-- ✅ Sender -->
              <div class="mb-4">
                <label class="form-label fw-bold">Sender</label>
                <input list="sender-list" name="sender" class="form-control form-control-lg" placeholder="Type or select sender..." required>
                <datalist id="sender-list">
                  <% senders.forEach(s => { %>
                    <option value="<%= s.name %>"></option>
                  <% }) %>
                </datalist>
              </div>

              <!-- ✅ Receiver -->
              <div class="mb-4">
                <label class="form-label fw-bold">Receiver</label>
                <input list="receiver-list" name="receiver" class="form-control form-control-lg" placeholder="Type or select receiver..." required>
                <datalist id="receiver-list">
                  <% receivers.forEach(r => { %>
                    <option value="<%= r.name %>"></option>
                  <% }) %>
                </datalist>
              </div>

              <!-- ✅ Dispatch From -->
              <div class="mb-4">
                <label class="form-label fw-bold">Dispatch From</label>
                <input list="from-list" name="dispatchFrom" class="form-control form-control-lg" placeholder="Type or select location..." required>
                <datalist id="from-list">
                  <% addresses.forEach(a => { %>
                    <option value="<%= a.hubName %>">- <%= a.details %></option>
                  <% }) %>
                </datalist>
              </div>

              <!-- ✅ Dispatch To -->
              <div class="mb-4">
                <label class="form-label fw-bold">Dispatch To</label>
                <input list="to-list" name="dispatchTo" class="form-control form-control-lg" placeholder="Type or select location..." required>
                <datalist id="to-list">
                  <% addresses.forEach(a => { %>
                    <option value="<%= a.hubName %>">- <%= a.details %></option>
                  <% }) %>
                </datalist>
              </div>

              <!-- ✅ Prepared By -->
              <div class="mb-4">
                <h5 class="fw-bold text-primary mb-3">Prepared By</h5>
                <div class="row g-3">
                  <div class="col-md-6"><input type="text" name="preparedBy[name]" placeholder="Full Name" class="form-control" required></div>
                  <div class="col-md-6"><input type="text" name="preparedBy[phone]" placeholder="Phone Number" class="form-control" required></div>
                  <div class="col-md-4"><input type="text" name="preparedBy[designation]" placeholder="Designation" class="form-control"></div>
                  <div class="col-md-4"><input type="text" name="preparedBy[employee_id]" placeholder="Employee ID" class="form-control"></div>
                  <div class="col-md-4"><input type="text" name="preparedBy[department]" placeholder="Department" class="form-control"></div>
                </div>
              </div>

              <!-- ✅ Items -->
              <div class="mb-4">
                <h5 class="fw-bold text-primary mb-3">Items (at least one)</h5>
                <div id="items-container">
                  <div class="item-row">
                    <div class="row g-3">
                      <div class="col-md-5"><input type="text" name="items[0][name]" placeholder="Item Name" class="form-control" required></div>
                      <div class="col-md-2"><input type="text" name="items[0][quantity]" placeholder="Qty" class="form-control" required></div>
                      <div class="col-md-2"><input type="text" name="items[0][unit]" placeholder="Unit" class="form-control" required></div>
                      <div class="col-md-3"><input type="text" name="items[0][comments]" placeholder="Comments (optional)" class="form-control"></div>
                    </div>
                  </div>
                </div>
                <button type="button" class="btn btn-outline-primary btn-sm mt-2" onclick="addItem()">Add Another Item</button>
              </div>

              <!-- ✅ Remarks -->
              <div class="mb-4">
                <label class="form-label fw-bold">Remarks (Optional)</label>
                <textarea name="remarks" rows="3" class="form-control" placeholder="Any special instructions..."></textarea>
              </div>

              <div class="text-center">
                <button type="submit" class="btn btn-primary btn-lg btn-submit shadow-lg">Create Gate Pass</button>
                <a href="/api/v1/gatepass" class="btn btn-secondary btn-lg ms-3">Cancel</a>
              </div>
            </form>

          </div>
        </div>
      </div>
    </div>
  </div>

  <script>
    let itemIndex = 1;
    function addItem() {
      const container = document.getElementById('items-container');
      const div = document.createElement('div');
      div.className = 'item-row';
      div.innerHTML = `
        <div class="row g-3">
          <div class="col-md-5"><input type="text" name="items[${itemIndex}][name]" placeholder="Item Name" class="form-control" required></div>
          <div class="col-md-2"><input type="text" name="items[${itemIndex}][quantity]" placeholder="Qty" class="form-control" required></div>
          <div class="col-md-2"><input type="text" name="items[${itemIndex}][unit]" placeholder="Unit" class="form-control" required></div>
          <div class="col-md-2"><input type="text" name="items[${itemIndex}][comments]" placeholder="Comments" class="form-control"></div>
          <div class="col-md-1">
            <button type="button" class="btn btn-danger btn-sm" onclick="this.closest('.item-row').remove()">Remove</button>
          </div>
        </div>
      `;
      container.appendChild(div);
      itemIndex++;
    }
  </script>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
