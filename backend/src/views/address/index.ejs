<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>All Addresses</title>

  <!-- Bootstrap 5 + Icons -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">

  <style>
    body {
      background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
      min-height: 100vh;
      font-family: 'Segoe UI', sans-serif;
    }
    .page-header {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      color: white;
      padding: 2rem 0;
      margin-bottom: 2rem;
      border-radius: 0 0 20px 20px;
      box-shadow: 0 10px 30px rgba(0,0,0,0.2);
    }
    .card {
      border: none;
      border-radius: 16px;
      box-shadow: 0 8px 25px rgba(0,0,0,0.1);
      transition: transform 0.3s, box-shadow 0.3s;
    }
    .card:hover {
      transform: translateY(-10px);
      box-shadow: 0 20px 40px rgba(0,0,0,0.15);
    }
    .address-icon {
      font-size: 2.5rem;
      color: #667eea;
    }
    .btn-add {
      position: fixed;
      bottom: 30px;
      right: 30px;
      width: 60px;
      height: 60px;
      border-radius: 50%;
      font-size: 1.8rem;
      box-shadow: 0 8px 25px rgba(102, 126, 234, 0.4);
    }
  </style>
</head>
<body>

  <!-- Header -->
  <div class="page-header text-center">
    <div class="container">
      <h1 class="display-4 fw-bold">
        <i class="bi bi-geo-alt-fill"></i> All Addresses
      </h1>
      <p class="lead">Total: <strong><%= addresses.length %></strong> locations</p>
    </div>
  </div>

  <div class="container">
    <% if (addresses.length === 0) { %>
      <div class="text-center py-5">
        <i class="bi bi-inbox display-1 text-muted"></i>
        <h3 class="mt-4 text-muted">No addresses found</h3>
        <a href="/api/v1/addresses/create" class="btn btn-primary btn-lg mt-3">
          <i class="bi bi-plus-circle"></i> Add First Address
        </a>
      </div>
    <% } else { %>
      <div class="row g-4">
        <% addresses.forEach((addr, i) => { %>
          <div class="col-md-6 col-lg-4">
            <div class="card h-100 border-0">
              <div class="card-body p-4">
                <div class="d-flex align-items-center mb-3">
                  <i class="bi bi-building address-icon me-3"></i>
                  <h4 class="card-title mb-0 text-primary">#<%= i + 1 %></h4>
                </div>

                <h5 class="fw-bold text-dark">
                  <i class="bi bi-signpost-2"></i> <%= addr.hubName || 'Unnamed Hub' %>
                </h5>

                <% if (addr.details) { %>
                  <p class="text-muted mt-2">
                    <i class="bi bi-info-circle"></i> <%= addr.details %>
                  </p>
                <% } %>

                <% if (addr.contactPerson) { %>
                  <p class="mb-2">
                    <i class="bi bi-person-badge"></i>
                    <strong>Contact:</strong> <%= addr.contactPerson %>
                  </p>
                <% } %>

                <% if (addr.phoneNumber) { %>
                  <p class="mb-0">
                    <i class="bi bi-telephone"></i>
                    <a href="tel:<%= addr.phoneNumber %>"><%= addr.phoneNumber %></a>
                  </p>
                <% } %>
              </div>

              <div class="card-footer bg-transparent border-top-0">
                <small class="text-muted">
                  Added: <%= new Date(addr.createdAt).toLocaleDateString('en-IN') %>
                </small>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    <% } %>
  </div>

  <!-- Floating Add Button -->
  <a href="/api/v1/addresses/addaddress" class="btn btn-primary btn-lg btn-add">
    <i class="bi bi-plus"></i>
  </a>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>